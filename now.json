{
    "version": 2,
    "builds": [
        {
            "src": "app.js",
            "use": "@now/node-server"
        }
    ],
    "routes": [
        {
            "src": "/cerveceria/(?<id>[^/]+)",
            "dest": "/app.js/?id=$id",
            "methods": [
                "DELETE"
            ]
        },
        {
            "src": "/cerveceria/(?<id>[^/]+)",
            "dest": "/app.js/?id=$id",
            "methods": [
                "PUT"
            ]
        },
        {
            "src": "/cervecerias",
            "dest": "/app.js",
            "methods": [
                "GET"
            ],
            "headers": [
                {
                    "key": "access-control-allow-origin",
                    "value": "*"
                }
            ]
        },
        {
            "src": "/cervecerias",
            "dest": "/app.js",
            "methods": [
                "POST"
            ]
        },
        {
            "src": "/",
            "dest": "/app.js",
            "methods": [
                "GET"
            ]
        }
    ]
}