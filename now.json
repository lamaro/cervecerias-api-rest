{
    "version": 2,
    "builds": [
        {
            "src": "app.js",
            "use": "@now/node-server"
        }
    ],
    "routes": [
        {
            "src": "/cervecerias",
            "dest": "/app.js",
            "methods": [
                "GET"
            ]
        },
        {
            "src": "/cervecerias",
            "dest": "/app.js",
            "methods": [
                "POST"
            ]
        },
        {
            "src": "/cervecerias/",
            "dest": "/app.js",
            "methods": [
                "DELETE"
            ]
        },
        {
            "src": "/",
            "dest": "/app.js",
            "methods": [
                "GET"
            ]
        }
    ],
    "rewrites": [
        { "source": "/cervecerias/:id", "destination": "/cervecerias"}
      ]
}